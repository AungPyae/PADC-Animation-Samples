<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="500">
    <fade>
        <targets>
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@android:id/navigationBarBackground" />
        </targets>
    </fade>

    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/tv_attraction_desc" />
        </targets>
    </slide>

    <slide android:slideEdge="left">
        <targets>
            <target android:targetId="@id/iv_map" />
            <target android:targetId="@id/iv_book" />
        </targets>
    </slide>

    <slide android:slideEdge="right">
        <targets>
            <target android:targetId="@id/fab_plus" />
            <target android:targetId="@id/fab_sms" />
            <target android:targetId="@id/fab_fb_messenger" />
            <target android:targetId="@id/fab_viber" />
        </targets>
    </slide>

</transitionSet>